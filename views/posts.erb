<% if @posts %>
  <% @posts.each do |post| %>
    <h2><a href="/<%= post[:published_at].year %>/<%= post[:published_at].month %>/<%= post[:published_at].day %>/<%= post[:slug] %>"><%= post[:title] %></a></h2>
    <p><%= post[:content] %></p>
  <% end %>
<% end %>
<p>
<%= paginate (@count / @per_page.to_f).ceil, params[:page] %>
</p>