<%= partial get_post, :locals=>{:post=>@post} %>
<a name="comments"></a>
<% if @post.comments.length > 0 %>
<div id="post_comments">
  <% @post.comments.each do |comment| %>
    <%= partial get_comment, :locals=>{:comment=>comment} %>
  <% end %>
</div><!-- /comments -->
<% end %>
<%= partial get_comment_form, :locals=>{:post=>@post} %>