<div id="leave_comment">
<h4>Leave a comment</h4>
<form method="post" action="<%= options.conf.blog_url_prefix %>/post-comment">
  <input type="hidden" name="post_id" value="<%= @post.id %>" id="post_id"/>
  <p>
    <label for="name">Your Name *</label><br/>
    <%= text_field 'name' %>
  </p>
  <p>
    <label for="email">Your Email * (Will not be displayed)</label><br/>
    <%= text_field 'email' %>
  </p>
  <p>
    <label for="website">Your Website</label><br/>
    <%= text_field 'website' %>
  </p>
  <p>
    <label for="comment">Your Comment *</label><br/>
    <%= text_area 'comment' %>
  </p>
  <% if options.conf.recaptcha_is_active %>
  <p>
    <%= recaptcha %>
  </p>
  <% end %>
  <p>
    <input type="submit" name="submit" value="Submit" id="submit"/>
  </p>
</form>
</div><!-- /leave_comment -->