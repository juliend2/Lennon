<form action="/admin/posts/add" method="post" accept-charset="utf-8">
  <% if @messages %>
    <p class="error">Error:<br/> 
    <%= @messages.join('<br/>') %></p>
  <% end %>
  <p>
    <label for="title">Title</label><br/>
    <%= text_field 'title' %>
  </p>
  <p>
    <label for="content">Content</label><br/>
    <%= text_area 'content' %>
  </p>
  <p><input type="submit" value="Continue &rarr;"/></p>
</form>